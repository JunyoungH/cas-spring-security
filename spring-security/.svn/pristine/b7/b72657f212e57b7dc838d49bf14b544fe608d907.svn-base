					log.info("|updateCp()|"+StatusCode.UPDATE_SUCCESS+"|"+PrincipalUtils.getLoginUid(principal)+"|cp_id list = "+ idList
			        		+ "|cp_id = "+splitId[i] +", update failed.");
					log.debug("OrganizationController | organization/get_back_cp | POST | exit");
