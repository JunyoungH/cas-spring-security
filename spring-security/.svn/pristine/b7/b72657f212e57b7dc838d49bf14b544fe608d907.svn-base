					log.info("|updateCp()|"+StatusCode.UPDATE_SUCCESS+"|"+PrincipalUtils.getLoginUid(principal)+"|cp_id = "+splitId[i]
			        		+ "|Update successfully.");
					
					if(WILAS_LABEL.equals("standard")) {
